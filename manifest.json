{
  "author": "Flatsiedatsie",
  "content_scripts": [
    {
      "css": [
        "css/extension.css"
      ],
      "js": [
        "js/extension.js"
      ]
    }
  ],
  "description": "Adds a menu option to shutdown or reboot your device",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "python3 {path}/main.py",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/flatsiedatsie/power-settings",
  "id": "power-settings",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "Power settings",
  "short_name": "PowerSet",
  "version": "0.0.1",
  "web_accessible_resources": [
    "css/*.css",
    "images/*.svg",
    "js/*.js",
    "views/*.html"
  ]
}
