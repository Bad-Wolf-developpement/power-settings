{
  "author": "CandleSmartHome.com",
  "content_scripts": [
    {
      "css": [
        "css/extension.css"
      ],
      "js": [
        "js/extension.js"
      ]
    }
  ],
  "description": "Adds options to shutdown or reboot your system, go fullscreen, manually set the time, create and restore backups, do a factory reset, or enable anonymous MQTT access",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "python3 {path}/main.py",
      "primary_type": "extension",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/createcandle/power-settings",
  "id": "power-settings",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "Power Settings",
  "options": {
    "default": {
      "Debug": false
    },
    "schema": {
      "properties": {
        "Debug": {
          "description": "Advanced. Enable this to see much more detail in the internal log about what this add-on is doing.",
          "type": "boolean"
        }
      },
      "required": [],
      "type": "object"
    }
  },
  "short_name": "Power",
  "version": "3.1.20",
  "web_accessible_resources": [
    "css/*.css",
    "images/*.svg",
    "images/*.gif",
    "js/*.js",
    "views/*.html",
    "backup/*.tar"
  ]
}
